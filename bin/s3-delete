#!/usr/bin/env node
// ----------------------------------------------------- -*- javascript -*- ---

// core
var fs = require('fs');

// npm
var argh = require('argh');
var aws = require('aws-sdk');
var async = require('async');

// ----------------------------------------------------------------------------

// set up the AWS config and credentials
aws.config.update({
    accessKeyId     : process.env.AWS_ACCESS_KEY_ID,
    secretAccessKey : process.env.AWS_SECRET_ACCESS_KEY,
    sslEnabled      : true,
});

var args     = argh.argv;
var acl      = args.acl;
var bucket   = args.argv[0];
var filename = args.argv[1];

if ( !bucket ) {
    console.log('Usage: %s %s <bucket> <filename>', process.argv[0], process.argv[1]);
    process.exit(2);
}

if ( !filename ) {
    console.log('Usage: %s %s <bucket> <filename>', process.argv[0], process.argv[1]);
    process.exit(2);
}

var s3 = new aws.S3();

var params = {
    Bucket : bucket,
    Key    : filename,
};

// do two operations (simultaneously)
fs.unlink(filename, function(err) {
    if (err) {
        if ( err.code === 'ENOENT' ) {
            return console.log('! ' + filename + ' (file)');
        }
        return console.warn('Error deleting file: ' + err);
    }
    console.log('! ' + filename + ' (file)');
});

s3.deleteObject(params, function(err, info) {
    if (err) {
        return console.warn('Error deleting object: ' + err);
    }
    console.log('! ' + filename + ' (object)');
});

// ----------------------------------------------------------------------------
